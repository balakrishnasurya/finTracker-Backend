{
  "info": {
    "name": "Split-Wise Group Expenses API",
    "description": "Complete API collection for testing Split-Wise group expense management features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Create Group",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Goa Trip 2026\",\n  \"description\": \"Beach vacation expenses\",\n  \"members\": [\n    {\"userId\": 101, \"name\": \"Arun\"},\n    {\"userId\": 102, \"name\": \"Ram\"},\n    {\"userId\": null, \"name\": \"Laxman\"},\n    {\"userId\": null, \"name\": \"Sita\"}\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/groups",
          "host": ["{{baseUrl}}"],
          "path": ["groups"]
        }
      }
    },
    {
      "name": "2. Get All Groups",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups",
          "host": ["{{baseUrl}}"],
          "path": ["groups"]
        }
      }
    },
    {
      "name": "3. Get Group Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}"]
        }
      }
    },
    {
      "name": "4. Add Transaction - Hotel",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Hotel booking - 3 nights\",\n  \"amount\": 12000.00,\n  \"paidByMemberId\": 1,\n  \"includedMemberIds\": [1, 2, 3, 4]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "transactions"]
        }
      }
    },
    {
      "name": "5. Add Transaction - Dinner",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Dinner at restaurant\",\n  \"amount\": 2400.00,\n  \"paidByMemberId\": 2,\n  \"includedMemberIds\": [1, 2, 3]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "transactions"]
        }
      }
    },
    {
      "name": "6. Add Transaction - Breakfast",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Breakfast\",\n  \"amount\": 800.00,\n  \"paidByMemberId\": 3,\n  \"includedMemberIds\": [1, 2, 3, 4]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "transactions"]
        }
      }
    },
    {
      "name": "7. Get All Transactions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "transactions"]
        }
      }
