    {
      "name": "8. Get Member Balances",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/balances",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "balances"]
