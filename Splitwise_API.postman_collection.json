    {
      "name": "9. Calculate Settlement",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}/settlement",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}", "settlement"]
        }
      }
    },
    {
      "name": "10. Delete Group",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/{{groupId}}",
          "host": ["{{baseUrl}}"],
          "path": ["groups", "{{groupId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
